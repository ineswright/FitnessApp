<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gamecodeschool.myfitnessapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ViewWorkoutDataActivity"
            android:label="@string/title_activity_view_workout_data"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <!--
        <activity
            android:name=".ViewWorkoutDataActivity"
            android:label="@string/title_activity_view_workout_data"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        -->
        <activity android:name=".AddExerciseActivity" />
        <activity
            android:name=".InitialEntry"
            android:label="@string/title_activity_initial_entry"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewWorkoutActivity"
            android:label="@string/title_activity_new_workout"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViewWorkoutsActivity"
            android:label="@string/title_activity_view_workouts"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SeeProgressActivity"
            android:label="@string/title_activity_see_progress"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditGoalsActivity"
            android:label="@string/title_activity_edit_goals"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PersonalDetailsActivity"
            android:label="@string/title_activity_personal_details"
